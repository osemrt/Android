<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DarkButton">
        <item name="android:textColor">@color/Lavender</item>
        <item name="android:background">@color/DarkGray</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MediumButton">
        <item name="android:textColor">@color/Lavender</item>
        <item name="android:background">@color/Gray</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="DeleteButton">
        <item name="android:textColor">@color/Lavender</item>
        <item name="android:background">@color/DeleteButton</item>
        <item name="android:textSize">35sp</item>
    </style>


</resources>
