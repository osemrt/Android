<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Styles and Theme are the same, the only difference is the name convention!-->
    <!--They are implemented to the Views and Themes sequentially.-->
    <style name="TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TextView.Header">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

    <style name="MyTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>
